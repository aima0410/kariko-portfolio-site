---
// ---- Components ----
import Card from '@ui-elements/_Card.astro';
import Skill from '@ui-parts/Skill.astro';
// ---- Images ----
import HTML from '@images/skills/HTML5.svg';
---

<Card class:list={['card--inner-shadow']}>
  <div class="card__inner"></div>
  <h3>SKILL SET</h3>
  <ul>
    <Skill src={HTML} title="HTML5" />
    <Skill src={HTML} title="HTML5" />
    <Skill src={HTML} title="HTML5" />
    <Skill src={HTML} title="HTML5" />
    <Skill src={HTML} title="HTML5" />
    <Skill src={HTML} title="HTML5" />
    <Skill src={HTML} title="HTML5" />
  </ul>
</Card>

<style>
  .card__inner {
    position:absolute;
    top:10px;
    left:10px;
    z-index: 0;
    pointer-events: none;
    inline-size: calc(100% - 20px);
    block-size: calc(100% - 20px);
    background: rgb(255 255 255 / 0.3);
    border: solid 3px var(--txtDK);
    border-radius: 10px;
    backdrop-filter: blur(30px);
  }
  h3 {
    position: relative;
    z-index: 1;
    margin-block-end: 30px;
  }
  ul {
    position: relative;
    z-index: 1;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    overflow-y: scroll;
    inline-size: 100%;
    block-size: 350px;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    -ms-overflow-style: none;
    scrollbar-width: none;
    &::-webkit-scrollbar {
      display: none;
    }
  }
</style>
